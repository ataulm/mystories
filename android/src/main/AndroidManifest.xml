<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ataulm.wutson">

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:name="com.ataulm.wutson.WutsonApplication"
    android:label="@string/app_name"
    android:theme="@style/Wutson.Base"
    android:icon="@drawable/ic_launcher"
    android:allowBackup="true">

    <activity android:name="com.ataulm.wutson.popularshows.PopularShowsActivity" />
    <activity android:name="com.ataulm.wutson.popularshows.TvShowActivity" />
    <activity android:name="com.ataulm.wutson.settings.SettingsActivity" />
    <activity android:name="com.ataulm.wutson.settings.SoftwareLicensesActivity" />

    <activity-alias
      android:name="activity.primary_launcher"
      android:targetActivity="com.ataulm.wutson.popularshows.PopularShowsActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

  </application>

</manifest>

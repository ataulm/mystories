<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ataulm.wutson">

  <application
    android:label="@string/app_name"
    android:theme="@style/Wutson.Base"
    android:icon="@drawable/ic_launcher"
    android:allowBackup="true">

    <activity android:name="com.ataulm.wutson.TrendingShowsActivity" />
    <activity android:name="com.ataulm.wutson.ShowActivity" />

    <activity-alias
      android:name="activity.primary_launcher"
      android:targetActivity="com.ataulm.wutson.TrendingShowsActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

  </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Seasons" />

  <style name="Seasons.RecyclerView">
    <item name="android:paddingLeft">@dimen/seasons_padding_left</item>
    <item name="android:paddingTop">@dimen/seasons_padding_top</item>
    <item name="android:paddingRight">@dimen/seasons_padding_right</item>
    <item name="android:paddingBottom">@dimen/seasons_padding_bottom</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:descendantFocusability">afterDescendants</item>
  </style>

  <style name="Seasons.Episode" />

  <style name="Seasons.ListItem" parent="Wutson.CardView">
    <item name="android:paddingLeft">@dimen/seasons_episode_item_padding_left</item>
    <item name="android:paddingTop">@dimen/seasons_episode_item_padding_top</item>
    <item name="android:paddingRight">@dimen/seasons_episode_item_padding_right</item>
    <item name="android:paddingBottom">@dimen/seasons_episode_item_padding_bottom</item>
    <item name="android:background">@drawable/card_background</item>
    <item name="android:focusable">true</item>
  </style>

  <style name="Seasons.Episode.Poster">
    <item name="android:scaleType">centerCrop</item>
  </style>

  <style name="Seasons.Episode.Name" />

  <style name="Seasons.Episode.AirDate" />

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppBarShadow">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/app_bar_shadow_height</item>
    <item name="android:background">@drawable/app_bar_shadow</item>
  </style>

  <style name="TabStrip">
    <item name="tabLayoutId">@layout/view_tab</item>
    <item name="tabsLeftPadding">0dp</item>
    <item name="indicatorColor">@color/tab_strip_indicator</item>
    <item name="indicatorHeight">@dimen/tab_strip_indicator_height</item>
  </style>

  <style name="SlidingTabStrip" parent="TabStrip">
    <item name="tabLayoutId">@layout/view_sliding_tab</item>
    <item name="tabsLeftPadding">@dimen/tab_strip_offset_left</item>
  </style>

  <style name="Tab">
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/tab_text</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">14sp</item>
    <item name="android:background">@drawable/tab_background</item>
    <item name="textFont">robotoMedium</item>
  </style>

  <style name="Wutson.CardView" parent="CardView">
    <item name="android:foreground">@drawable/card_view_foreground</item>
    <item name="elevation">@dimen/card_view_elevation</item>
    <item name="contentPadding">0dp</item>
    <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
    <item name="cardUseCompatPadding">true</item>
    <item name="cardPreventCornerOverlap">false</item>
  </style>

  <!-- TODO: pick correct card foregrounds with Qi -->
  <color name="card_view_foreground_ripple">#BBBBBB</color>
  <color name="card_view_foreground_pressed">#66A09C9D</color>
  <color name="card_view_foreground_focused">#66757575</color>
  <color name="card_view_foreground_default">@color/transparent</color>
  <color name="card_view_background">#F0F0F0</color>

  <dimen name="card_view_corner_radius">2dp</dimen>
  <dimen name="card_view_elevation">2dp</dimen>
  <!-- selector insets for pre-v21 cards so selector covers only card content -->
  <dimen name="card_view_inset_left">@dimen/card_view_elevation</dimen>
  <dimen name="card_view_inset_top">3dp</dimen>
  <dimen name="card_view_inset_right">@dimen/card_view_elevation</dimen>
  <dimen name="card_view_inset_bottom">3dp</dimen>

</resources>

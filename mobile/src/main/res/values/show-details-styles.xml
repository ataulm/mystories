<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ShowDetails" />

  <style name="ShowDetails.AppBar">
    <item name="android:background">@color/black</item>
  </style>

  <style name="ShowDetails.ShowHeader" />

  <style name="ShowDetails.ShowHeader.View">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:background">@color/white</item>
  </style>

  <style name="ShowDetails.ShowHeader.Name">
    <item name="android:textAppearance">@style/ShowDetails.ShowHeader.TextAppearance.Name</item>
  </style>

  <style name="ShowDetails.ShowHeader.Overview">
    <item name="android:textAppearance">@style/ShowDetails.ShowHeader.TextAppearance.Overview</item>
  </style>

  <style name="ShowDetails.ShowHeader.TextAppearance">
    <item name="android:textColor">#666666</item>
  </style>

  <style name="ShowDetails.ShowHeader.TextAppearance.Name">
    <item name="android:textSize">24sp</item>
  </style>

  <style name="ShowDetails.ShowHeader.TextAppearance.Overview">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="ShowDetails.Cast" />

  <style name="ShowDetails.Cast.View">
    <item name="android:paddingLeft">@dimen/cast_padding_left</item>
    <item name="android:paddingTop">@dimen/cast_padding_top</item>
    <item name="android:paddingRight">@dimen/cast_padding_right</item>
    <item name="android:paddingBottom">@dimen/cast_padding_bottom</item>
  </style>

  <style name="ShowDetails.Cast.Title">
    <item name="android:textAppearance">@style/ShowDetails.Cast.Title.TextAppearance</item>
  </style>

  <style name="ShowDetails.Cast.Title.TextAppearance">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="ShowDetails.Cast.Character" />

  <style name="ShowDetails.Cast.Character.View" />

  <style name="ShowDetails.Cast.Character.Profile">
    <item name="android:scaleType">centerCrop</item>
  </style>

  <style name="ShowDetails.Cast.Character.Name">
    <item name="android:gravity">bottom</item>
  </style>

  <style name="ShowDetails.Cast.Character.Actor">
    <item name="android:gravity">top</item>
  </style>

</resources>

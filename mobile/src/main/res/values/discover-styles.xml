<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Discover" />

  <style name="Discover.Shows" />

  <style name="Discover.Shows.Page">
    <item name="android:paddingLeft">@dimen/discover_shows_page_padding_left</item>
    <item name="android:paddingRight">@dimen/discover_shows_page_padding_right</item>
  </style>

  <style name="Discover.Show" />

  <style name="Discover.Show.View">
    <item name="android:foreground">@drawable/discover_show_foreground</item>
  </style>

  <style name="Discover.Show.Poster">
    <item name="android:scaleType">centerCrop</item>
    <item name="aspectRatio">174:154</item>
  </style>

  <style name="Discover.Show.Overlay">
    <item name="android:background">@color/discover_show_overlay_background</item>
  </style>

  <style name="Discover.Show.Name">
    <item name="android:textColor">@color/discover_show_name_text</item>
    <item name="android:textSize">@dimen/discover_show_name_text</item>
    <item name="textFont">robotoRegular</item>
  </style>

</resources>

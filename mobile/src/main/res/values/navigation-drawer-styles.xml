<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="NavigationDrawer" />

  <style name="NavigationDrawer.View">
    <item name="android:clickable">true</item>
    <item name="android:background">@color/navigation_drawer_background</item>
  </style>

  <style name="NavigationDrawer.Item" />

  <style name="NavigationDrawer.Item.View">
    <item name="android:focusable">true</item>
    <item name="android:paddingLeft">@dimen/navigation_drawer_item_padding_left</item>
    <item name="android:paddingTop">@dimen/navigation_drawer_item_padding_top</item>
    <item name="android:paddingRight">@dimen/navigation_drawer_item_padding_right</item>
    <item name="android:paddingBottom">@dimen/navigation_drawer_item_padding_bottom</item>
    <item name="android:minHeight">@dimen/navigation_drawer_item_height</item>
    <item name="android:background">@drawable/navigation_drawer_item_background</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="NavigationDrawer.Item.Title">
    <item name="android:textColor">@color/navigation_drawer_item_title_text</item>
    <item name="android:textSize">@dimen/navigation_drawer_item_text</item>
    <item name="textFont">robotoMedium</item>
  </style>

</resources>
